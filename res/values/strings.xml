    <string name="wizard_what_is_PB">Panic Button is an emergency alert app for people at risk.</string>
    <string name="wizard_PB_feature1">&#160;&#160;Alerts are sent via SMS every 5 minutes</string>
    <string name="wizard_PB_feature2">&#160;&#160;Current location is automatically added</string>
